<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>ServletBaslangic</display-name>

	<servlet>
		<servlet-name>HelloServlet</servlet-name>
		<servlet-class>HelloServlet.HelloServletClass</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HelloServlet</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>BaslangicRequest</servlet-name>
		<servlet-class>BaslangicRequest.BaslangicRequest</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BaslangicRequest</servlet-name>
		<url-pattern>/BaslangicRequest</url-pattern>
	</servlet-mapping>
	
	
</web-app>